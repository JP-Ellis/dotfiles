general {
    output_format   = "i3bar"
    colors          = true
    interval        = 5
}

## Set the ordering of all the elements
order += "ethernet ens9"
order += "wireless wlp3s0"
order += "disk /"
order += "disk /home"
order += "battery 0"
order += "cpu_temperature 0"
order += "load"
order += "tztime local"
order += "tztime utc"
order += "volume master"

ethernet ens9 {
    # if you use %speed, i3status requires the cap_net_admin capability
    format_up = "E: %ip [%speed]"
    format_down = "E: down"
}

wireless wlp3s0 {
    format_up   = "%essid %ip [%quality @ %frequency]"
    format_down = "W: down"
}

battery 0 {
    format          = "%status %percentage %remaining %emptytime"
    path            = "/sys/class/power_supply/BAT0/uevent"
    low_threshold   = 15
    integer_battery_capacity = true
    hide_seconds    = true
    status_chr      = "⚡"
    status_bat      = "🔋"
    status_full     = "🔌"
}

tztime local {
    format = "%Y-%m-%d %H:%M:%S"
}

tztime utc {
    format      = "%H:%M:%S %Z"
    timezone    = "UTC"
}

load {
    format = "%1min"
}

cpu_temperature 0 {
    format  = "%degrees °C"
    # path    = "/sys/devices/platform/coretemp.0/hwmon/hwmon0/temp1_input"
    path    = "/sys/devices/platform/applesmc.768/temp6_input"
}

disk "/home" {
    format = "🏠 %free"
    prefix_type = "binary"
    low_threshold = 16
    threshold_type = "gbytes_avail"
}

disk "/" {
    format = "√ %free"
    prefix_type = "binary"
    low_threshold = 4
    threshold_type = "gbytes_avail"
}

volume master {
    format  = "♪ %volume"
    device  = "default"
    mixer   = "Master"
    mixer_idx = 0
}
