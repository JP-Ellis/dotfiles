#!/usr/bin/zsh

source ~/.local/share/print-help.zsh

title "Arch Linux"
yay -Syu --noconfirm --devel --removemake

title "YCMD"
cd ~/src/ycmd
git fetch
if [[ $(git rev-parse HEAD) != $(git rev-parse @\{u\}) ]]; then
    git pull-all
    ./build.py --system-boost --system-libclang \
               --clang-completer \
               --clangd-completer \
               --java-completer \
               --rust-completer \
               --ts-completer
fi
cd ~

title "Zprezto"
cd ~/.zprezto
git pull-all --remote
cd ~

title "Rustup and Cargo"
rustup update
cargo install-update -a
