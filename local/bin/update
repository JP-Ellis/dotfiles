#!/usr/bin/zsh

source ~/.local/share/print-help.zsh

title "Arch Linux"
yay -Syu --noconfirm --devel --removemake

title "Zprezto"
cd ~/.zprezto
git pull-all --remote
cd ~

title "Emacs"
emacs -f 'configuration-layer/update-packages' \
      -f 'kill-emacs'

title "Rustup and Cargo"
rustup update
cargo install-update -a
