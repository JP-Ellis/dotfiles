# Don't store zinit within ~/.zinit but store it inside ~/.local/share/zsh.
#
# See https://github.com/zdharma/zinit#customizing-paths 
declare -A ZINIT  
ZINIT[HOME_DIR]="$HOME/.local/share/zsh/zinit"
ZINIT[BIN_DIR]="${ZINIT[HOME_DIR]}/bin"
# ZINIT[PLUGINS_DIR]
# ZINIT[COMPLETIONS_DIR]
# ZINIT[SNIPPETS_DIR]
# ZINIT[ZCOMPDUMP_PATH]
# ZINIT[COMPINIT_OPTS]
# ZINIT[MUTE_WARNINGS]
# ZINIT[OPTIMIZE_OUT_DISK_ACCESSES]


# Install Zinit if it isn't present
if [[ ! -d "${ZINIT[BIN_DIR]}" && $+commands[git] == 1 ]]; then
  echo "Installing Zinit..."
  mkdir -p "${ZINIT[BIN_DIR]}"
  git clone https://github.com/zdharma/zinit.git "${ZINIT[BIN_DIR]}"
fi

# Exit this script if Zinit isn't available
if [[ -e "${ZINIT[BIN_DIR]}/zinit.zsh" ]]; then
  # Load Zinit
  source "${ZINIT[BIN_DIR]}/zinit.zsh"
fi

# Library for display GUIs
zinit load zdharma/zui

# Variable browser (Ctrl + B)
zinit load zdharma/zbrowse

# Complete options from manual pages
zinit load zdharma/zzcomplete

zinit load zdharma/history-search-multi-word
zinit load zdharma/fast-syntax-highlighting